---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Mis Órdenes | CapyPay" showSidebar={true}>
  <div class="max-w-3xl mx-auto px-4 py-8">
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-3xl font-black text-white">Mis Órdenes</h1>
      <a
        href="/comedor"
        class="p-2 bg-white/5 rounded-full hover:bg-white/10 transition-colors"
      >
        <svg
          class="w-6 h-6 text-white"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path></svg
        >
      </a>
    </div>

    <!-- Filtros Estado -->
    <div class="flex gap-2 mb-6 overflow-x-auto pb-2 scrollbar-hide">
      <button
        class="filter-btn active px-4 py-2 rounded-full bg-brand-lime text-black font-bold text-sm"
        data-status="all">Todas</button
      >
      <button
        class="filter-btn px-4 py-2 rounded-full bg-white/5 text-white/60 font-medium text-sm border border-white/10"
        data-status="preparing">Preparando</button
      >
      <button
        class="filter-btn px-4 py-2 rounded-full bg-white/5 text-white/60 font-medium text-sm border border-white/10"
        data-status="ready">Listas</button
      >
      <button
        class="filter-btn px-4 py-2 rounded-full bg-white/5 text-white/60 font-medium text-sm border border-white/10"
        data-status="delivered">Entregadas</button
      >
    </div>

    <!-- Orders List -->
    <div id="orders-list" class="space-y-4 min-h-[50vh]">
      <!-- Loading -->
      <div class="animate-pulse space-y-4">
        <div class="h-24 bg-white/5 rounded-2xl"></div>
        <div class="h-24 bg-white/5 rounded-2xl"></div>
        <div class="h-24 bg-white/5 rounded-2xl"></div>
      </div>
    </div>
  </div>

  <script>
    // @ts-nocheck
    import { comedorService } from "../services/api";

    const container = document.getElementById("orders-list");
    const filterBtns = document.querySelectorAll(".filter-btn");

    let allOrders = [];

    async function fetchOrders() {
      try {
        const userStr = localStorage.getItem("capypay_user");
        if (!userStr) {
          window.location.href = "/login";
          return;
        }
        const user = JSON.parse(userStr);
        const userId = user.id || user.usuarioId;

        const response = await comedorService.getMyOrders(userId);

        if (response && response.orders) {
          allOrders = response.orders;
          renderOrders("all");
        } else {
          renderEmpty("No tienes órdenes registradas");
        }
      } catch (error) {
        console.error(error);
        renderEmpty("Error al cargar órdenes");
      }
    }

    function renderOrders(filterStatus) {
      if (!container) return;

      const filtered =
        filterStatus === "all"
          ? allOrders
          : allOrders.filter((o) => o.status === filterStatus);

      if (filtered.length === 0) {
        renderEmpty(
          filterStatus === "all"
            ? "Sin órdenes"
            : `No hay órdenes ${translateStatus(filterStatus)}`,
        );
        return;
      }

      container.innerHTML = filtered
        .map((order) => {
          const date = new Date(order.created_at).toLocaleString("es-VE", {
            month: "short",
            day: "numeric",
            hour: "2-digit",
            minute: "2-digit",
          });
          const itemCount = order.order_items?.length || 0;
          const itemPreview =
            order.order_items
              ?.map((i) => i.menu_items?.name)
              .join(", ")
              .substring(0, 30) + (order.order_items?.length > 1 ? "..." : "");

          return `
            <a href="/order?id=${order.id}" class="block bg-[#1a1a1a] border border-white/5 hover:border-brand-lime/30 rounded-2xl p-4 transition-all active:scale-[0.98]">
               <div class="flex justify-between items-start mb-2">
                   <div class="flex items-center gap-2">
                       <span class="text-xs font-mono text-white/40">#${String(order.id).split("-")[0]}</span>
                       <span class="px-2 py-0.5 rounded text-[10px] font-bold uppercase tracking-wide border ${getStatusColor(order.status)}">
                          ${translateStatus(order.status)}
                       </span>
                   </div>
                   <span class="text-xs text-brand-lime font-bold">${parseFloat(order.total).toFixed(2)} CP</span>
               </div>
               <div class="flex justify-between items-end">
                   <div>
                       <h3 class="text-white font-bold text-sm">${itemCount} Items</h3>
                       <p class="text-white/50 text-xs mt-0.5">${itemPreview}</p>
                   </div>
                   <span class="text-[10px] text-white/30">${date}</span>
               </div>
            </a>
            `;
        })
        .join("");
    }

    function renderEmpty(msg) {
      if (container)
        container.innerHTML = `<div class="text-center py-10 text-white/30">${msg}</div>`;
    }

    function getStatusColor(status) {
      switch (status) {
        case "preparing":
          return "bg-yellow-500/10 text-yellow-500 border-yellow-500/20";
        case "ready":
          return "bg-green-500/10 text-green-500 border-green-500/20";
        case "delivered":
          return "bg-blue-500/10 text-blue-500 border-blue-500/20";
        default:
          return "bg-gray-500/10 text-gray-500 border-gray-500/20";
      }
    }

    function translateStatus(status) {
      const dog = {
        preparing: "Preparando",
        ready: "Listo",
        delivered: "Entregada",
        cancelled: "Cancelada",
      };
      return dog[status] || status;
    }

    // Filter Logic
    filterBtns.forEach((btn) => {
      btn.addEventListener("click", (e) => {
        // UI Update
        filterBtns.forEach((b) => {
          b.classList.remove("bg-brand-lime", "text-black");
          b.classList.add("bg-white/5", "text-white/60");
        });
        const target = e.currentTarget as HTMLElement;
        target.classList.remove("bg-white/5", "text-white/60");
        target.classList.add("bg-brand-lime", "text-black");

        // Filter
        const status = target.dataset.status;
        renderOrders(status);
      });
    });

    // Init
    fetchOrders();
  </script>
</MainLayout>
