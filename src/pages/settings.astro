---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Configuración | CapyPay">
  <div class="flex flex-col gap-6 h-full p-4 lg:p-0">
    <!-- Header -->
    <div
      class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 bg-brand-black p-6 rounded-3xl border border-white/10 shadow-lg relative overflow-hidden group"
    >
      <div
        class="absolute -top-24 -right-24 w-48 h-48 bg-brand-lime/10 rounded-full blur-3xl group-hover:bg-brand-lime/20 transition-all duration-700"
      >
      </div>

      <div class="relative z-10">
        <h1 class="text-2xl font-bold text-white mb-2">Configuración</h1>
        <p class="text-slate-400 text-sm">
          Administra tus preferencias personales y de la cuenta.
        </p>
      </div>
    </div>

    <!-- Settings Content -->
    <div
      class="grid grid-cols-1 lg:grid-cols-2 gap-6 flex-1 overflow-y-auto custom-scrollbar"
    >
      <!-- Profile Settings -->
      <section
        class="bg-brand-black border border-white/5 rounded-3xl p-6 h-fit"
      >
        <h2 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-brand-lime"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
            ></path>
          </svg>
          Perfil
        </h2>
        <form class="space-y-4">
          <div>
            <label class="block text-slate-400 text-sm mb-2"
              >Nombre de Usuario</label
            >
            <input
              type="text"
              value="Cormex"
              class="w-full bg-black/30 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-brand-lime/50 transition-colors"
            />
          </div>
          <div>
            <label class="block text-slate-400 text-sm mb-2"
              >Correo Electrónico</label
            >
            <input
              type="email"
              value="cormex@capypay.com"
              class="w-full bg-black/30 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-brand-lime/50 transition-colors"
            />
          </div>
          <button
            type="button"
            class="mt-2 bg-brand-lime text-black font-bold py-3 px-6 rounded-xl hover:bg-[#ccf044] transition-colors w-full sm:w-auto"
          >
            Guardar Cambios
          </button>
        </form>
      </section>

      <!-- App Settings -->
      <section
        class="bg-brand-black border border-white/5 rounded-3xl p-6 h-fit"
      >
        <h2 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-brand-lime"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Preferencias
        </h2>
        <div class="space-y-4">
          <div
            class="flex items-center justify-between p-3 bg-black/30 rounded-xl border border-white/5"
          >
            <span class="text-white">Modo Oscuro</span>
            <div
              class="w-12 h-6 bg-brand-lime rounded-full relative cursor-pointer"
            >
              <div
                class="absolute right-1 top-1 w-4 h-4 bg-black rounded-full shadow-sm"
              >
              </div>
            </div>
          </div>
          <div
            class="flex items-center justify-between p-3 bg-black/30 rounded-xl border border-white/5"
          >
            <span class="text-white">Notificaciones Push</span>
            <div
              class="w-12 h-6 bg-slate-700 rounded-full relative cursor-pointer"
            >
              <div
                class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full shadow-sm"
              >
              </div>
            </div>
          </div>
          <div
            class="flex items-center justify-between p-3 bg-black/30 rounded-xl border border-white/5"
          >
            <span class="text-white">Autenticación Biométrica</span>
            <div
              class="w-12 h-6 bg-brand-lime rounded-full relative cursor-pointer"
            >
              <div
                class="absolute right-1 top-1 w-4 h-4 bg-black rounded-full shadow-sm"
              >
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</MainLayout>
