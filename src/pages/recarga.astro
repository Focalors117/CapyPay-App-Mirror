        <!-- Summary Card -->
        <div
          class="bg-linear-to-br from-[#633BFF] to-[#4B2CCF] p-8 rounded-4xl text-white relative overflow-hidden shadow-2xl"
        >
          <div
            class="absolute -right-10 -top-10 w-40 h-40 bg-white/10 rounded-full blur-3xl"
          >
          </div>
          <div class="relative z-10">
            <div class="flex justify-between items-start mb-12">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8 opacity-60"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path></svg
              >
              <span
                class="bg-black/20 text-[10px] font-bold px-3 py-1 rounded-full border border-white/20 uppercase tracking-widest"
                >Resumen</span
              >
            </div>

            <div class="space-y-4">
              <div
                class="flex justify-between items-center opacity-70 border-b border-white/10 pb-2"
              >
                <span class="text-sm">Recibes</span>
                <span class="font-bold flex items-center gap-1">
                  <span id="summary-capys">0.00</span> C
                </span>
              </div>
              <div
                class="flex justify-between items-center opacity-70 border-b border-white/10 pb-2"
              >
                <span class="text-sm">Tasa</span>
                <span class="font-bold"
                  >1 C = <span id="summary-rate-display">--.--</span> Bs</span
                >
              </div>
              <div class="pt-2 flex justify-between items-end">
                <span class="text-sm opacity-70 pb-1">Total a pagar</span>
                <span class="text-3xl font-extrabold flex items-center gap-1">
                  <span class="text-lg font-medium self-start mt-1">Bs</span>
                  <span id="summary-bs">0.00</span>
                </span>
              </div>
            </div>
          </div>
        </div>

        <!-- Rate Widget Component -->
        <div class="h-32">
          <ExchangeRateWidget />
        </div>
      </div>
    </div>
  </div>

  <script>
    import { authService, transactionService } from "../services/api.js";

    let exchangeRate = 0; // Inicializar en 0 para evitar c谩lculos err贸neos antes de cargar

    const inputBs = document.getElementById(
      "input-bs",
    ) as HTMLInputElement | null; // Input de Bol铆vares
    const inputCapy = document.getElementById(
      "input-capy",
    ) as HTMLInputElement | null; // Input de Capys
    const summaryBs = document.getElementById("summary-bs"); // Elemento de resumen de Bs
    const summaryCapys = document.getElementById("summary-capys"); // Elemento de resumen de Capys
    let activeInput: "capy" | "bs" = "capy"; // Controla qu茅 input tiene el foco (bs o capy)

    // Auxiliar: Determinar si es vista m贸vil
    const isMobile = window.innerWidth < 1024;

    // Bloquear inputs hasta tener la tasa
    if (inputBs) inputBs.disabled = true;
    if (inputCapy) inputCapy.disabled = true;

    // Obtener tasa del backend
    (async () => {
      try {
        const data = await transactionService.getRate();
        if (data && data.tasa) {
          exchangeRate = data.tasa;
          console.log("Tasa actualizada y aplicada:", exchangeRate);

          // Desbloquear
          if (inputBs) inputBs.disabled = false;
          if (inputCapy) inputCapy.disabled = false;

          // Actualizar display del Resumen
          const summaryRateDisplay = document.getElementById(
            "summary-rate-display",
          );
          if (summaryRateDisplay) {
            summaryRateDisplay.innerText = exchangeRate.toFixed(2);
          }

          // Si hay valores, recalcular
          if (inputCapy?.value || inputBs?.value) {
            triggerUpdate(activeInput);
          }
        }
      } catch (e) {
        console.error("No se pudo obtener la tasa, usando por defecto", e);
      }
    })();

    // Verificaci贸n al montar el componente
    if (isMobile && inputBs && inputCapy) {
      // Evitar que el teclado nativo se abra en m贸viles, usamos el teclado en pantalla
      inputBs.readOnly = true;
      inputCapy.readOnly = true;
    }

    // L贸gica del Teclado Num茅rico (M贸vil)
    const keypadBtns = document.querySelectorAll(".keypad-btn");
    keypadBtns.forEach((btn) => {
      btn.addEventListener("click", () => {
        const targetInput = activeInput === "bs" ? inputBs : inputCapy;
        if (!targetInput) return;

        const digit = (btn as HTMLElement).innerText;
        // Evitar m煤ltiples puntos decimales
        if (digit === "." && targetInput.value.includes(".")) return;
        // Limitar la longitud de la entrada
        if (targetInput.value.length > 10) return;

        targetInput.value = targetInput.value + digit;
        triggerUpdate(activeInput);

        // Mantener el foco
        targetInput.focus();
      });
    });

    // Listeners para los Inputs
    if (inputBs) {
      inputBs.addEventListener("focus", () => {
        activeInput = "bs";
      });
      inputBs.addEventListener("input", () => triggerUpdate("bs"));
    }
    if (inputCapy) {
      inputCapy.addEventListener("focus", () => {
        activeInput = "capy";
      });
      inputCapy.addEventListener("input", () => triggerUpdate("capy"));
    }

    // L贸gica de C谩lculo
    function triggerUpdate(source: "capy" | "bs") {
      if (!inputBs || !inputCapy) return;

      if (source === "bs") {
        const val = parseFloat(inputBs.value);
        if (!isNaN(val)) {
          inputCapy.value = (val / exchangeRate).toFixed(2);
          updateSummary(val, val / exchangeRate);
        } else {
          inputCapy.value = "";
          updateSummary(0, 0);
        }
      } else {
        const val = parseFloat(inputCapy.value);
        if (!isNaN(val)) {
          inputBs.value = (val * exchangeRate).toFixed(2);
          updateSummary(val * exchangeRate, val);
        } else {
          inputBs.value = "";
          updateSummary(0, 0);
        }
      }
    }

    function updateSummary(bs: number, capys: number) {
      if (summaryBs)
        summaryBs.innerText = bs.toLocaleString("es-VE", {
          minimumFractionDigits: 2,
          maximumFractionDigits: 2,
        });
      if (summaryCapys)
        summaryCapys.innerText = capys.toLocaleString("es-VE", {
          minimumFractionDigits: 2,
          maximumFractionDigits: 2,
        });
    }

    // Funciones globales reemplazadas por Event Listeners

    // Establecer Monto R谩pido (Quick Chips)
    document.querySelectorAll('[data-action="set-amount"]').forEach((btn) => {
      btn.addEventListener("click", () => {
        const amount = btn.getAttribute("data-value");
        if (!amount || !inputCapy) return;

        activeInput = "capy";
        inputCapy.value = amount;
        triggerUpdate("capy");
      });
    });

    // Borrar铆gito (Backspace)
    const btnDelete = document.getElementById("btn-delete");
    if (btnDelete) {
      btnDelete.addEventListener("click", () => {
        const targetInput = activeInput === "bs" ? inputBs : inputCapy;
        if (!targetInput) return;

        targetInput.value = targetInput.value.slice(0, -1);
        triggerUpdate(activeInput);
      });
    }

    // Copiar al Portapapeles
    document.querySelectorAll('[data-action="copy"]').forEach((btn) => {
      btn.addEventListener("click", () => {
        const text = btn.getAttribute("data-text");
        if (text) {
          navigator.clipboard.writeText(text);
          // Opcional: Mostrar feedback visual
        }
      });
    });

    // L贸gica de Pasos (Wizard)
    document.querySelectorAll('[data-action="go-step"]').forEach((btn) => {
      btn.addEventListener("click", () => {
        const step = btn.getAttribute("data-step");
        if (!step) return;

        // Validaci贸n simple
        if (step === "2" && inputCapy) {
          if (!inputCapy.value || parseFloat(inputCapy.value) <= 0) {
            alert("Por favor ingresa un monto v谩lido");
            return;
          }
        }

        document
          .querySelectorAll(".step-content")
          .forEach((el) => el.classList.add("hidden"));

        const targetStep = document.getElementById(`step-${step}`);
        if (targetStep) {
          targetStep.classList.remove("hidden");
          targetStep.classList.add("flex");
        }
      });
    });

    // Selecci贸n de M茅todo de Pago
    document
      .querySelectorAll('[data-action="select-method"]')
      .forEach((btn) => {
        btn.addEventListener("click", () => {
          const method = btn.getAttribute("data-method");
          if (!method) return;

          const container = document.getElementById(
            "payment-details-container",
          );
          const infoPagoMovil = document.getElementById("info-pago-movil");
          const infoTransferencia =
            document.getElementById("info-transferencia");
          const btnPagoMovil = document.getElementById("btn-pago-movil");
          const btnTransferencia = document.getElementById("btn-transferencia");

          if (
            !container ||
            !infoPagoMovil ||
            !infoTransferencia ||
            !btnPagoMovil ||
            !btnTransferencia
          )
            return;

          // Resetear estilos
          btnPagoMovil.classList.remove(
            "border-brand-lime",
            "bg-brand-lime/5",
            "text-brand-lime",
          );
          btnTransferencia.classList.remove(
            "border-brand-lime",
            "bg-brand-lime/5",
            "text-brand-lime",
          );
          btnPagoMovil.classList.add("border-white/5", "text-slate-400");
          btnTransferencia.classList.add("border-white/5", "text-slate-400");

          // Estilo de selecci贸n
          const activeBtn =
            method === "pago-movil" ? btnPagoMovil : btnTransferencia;
          activeBtn.classList.remove("border-white/5", "text-slate-400");
          activeBtn.classList.add(
            "border-brand-lime",
            "bg-brand-lime/5",
            "text-brand-lime",
          );

          // Mostrar contenido
          infoPagoMovil.classList.add("hidden");
          infoTransferencia.classList.add("hidden");

          if (method === "pago-movil") {
            infoPagoMovil.classList.remove("hidden");
          } else {
            infoTransferencia.classList.remove("hidden");
          }

          // Toggle de Animaci贸n
          container.style.maxHeight = "500px";
          container.style.opacity = "1";
        });
      });

    const btnFinalizarRecarga = document.getElementById(
      "btn-finalizar-recarga",
    );

    if (btnFinalizarRecarga) {
      btnFinalizarRecarga.addEventListener("click", async () => {
        const user = authService.getCurrentUser();
        if (!user) {
          alert("Sesi贸n no v谩lida");
          window.location.href = "/login";
          return;
        }

        // Datos
        const montoCapy = parseFloat(inputCapy?.value || "0");
        const montoBs = parseFloat(inputBs?.value || "0"); // Usar el input de Bs

        const refInput = document.getElementById(
          "input-referencia",
        ) as HTMLInputElement;
        const referencia = refInput ? refInput.value : "";

        if (!montoCapy || montoCapy <= 0) {
          alert("Monto inv谩lido");
          return;
        }
        if (!referencia) {
          alert("Por favor ingresa el n煤mero de referencia");
          return;
        }

        // Determinar m茅todo de pago activo
        const infoPagoMovil = document.getElementById("info-pago-movil");
        // Si no existe o est谩 oculto, asumimos transferencia?
        // Mejor revisar la clase hidden. Si NO tiene hidden, es el activo.
        const isPagoMovil =
          infoPagoMovil && !infoPagoMovil.classList.contains("hidden");
        const metodoPago = isPagoMovil ? "pago_movil" : "transferencia";

        // UI Loading
        const originalText = btnFinalizarRecarga.innerHTML;
        btnFinalizarRecarga.innerHTML =
          "<span class='text-lg'>Procesando...</span>";
        // @ts-ignore
        btnFinalizarRecarga.disabled = true;

        try {
          const userId = user.id || user.usuarioId || user._id;

          console.log(
            `Enviando recarga: Bs ${montoBs} a tasa (aprox en frontend) ${exchangeRate}`,
          );

          await transactionService.recharge({
            usuarioId: userId,
            cedula: user.cedula || "",
            monto_bs: montoBs,
            metodo_pago: metodoPago,
            referencia: referencia,
          });

          // XITO
          btnFinalizarRecarga.innerHTML =
            "<span class='text-lg'>隆Recarga Exitosa!</span>";
          btnFinalizarRecarga.classList.remove("bg-brand-lime", "text-black");
          btnFinalizarRecarga.classList.add("bg-green-500", "text-white");

          setTimeout(() => {
            alert(
              "Recarga aplicada correctamente. Tu saldo se ha actualizado.",
            );
            window.location.href = "/dashboard";
          }, 1000);
        } catch (error) {
          console.error(error);
          alert(
            "Error: " + (error.message || "No se pudo procesar la recarga"),
          );
          btnFinalizarRecarga.innerHTML = originalText;
          btnFinalizarRecarga.classList.add("bg-brand-lime", "text-black");
          btnFinalizarRecarga.classList.remove("bg-green-500", "text-white");

          btnFinalizarRecarga.disabled = false;
        }
      });
    }
  </script>
</MainLayout>
