---
import MainLayout from "../layouts/MainLayout.astro";
import ExchangeRateWidget from "../components/ExchangeRateWidget.astro";
---

<MainLayout title="Recargar Saldo | CapyPay" showSidebar={true}>
  <div
    class="flex flex-col gap-4 lg:gap-6 min-h-screen lg:h-full p-3 sm:p-4 lg:p-0 relative overflow-y-auto"
  >
    <!-- Header Page -->
    <header
      class="flex flex-col md:flex-row justify-between items-start md:items-center gap-3 lg:gap-4 shrink-0"
    >
      <div class="flex items-center gap-3 lg:gap-4 w-full md:w-auto">
        <a
          href="/dashboard"
          class="w-9 h-9 lg:w-10 lg:h-10 rounded-full border border-white/10 flex items-center justify-center text-slate-400 hover:text-white hover:bg-white/5 transition-colors shrink-0"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4 lg:h-5 lg:w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"></path>
          </svg>
        </a>
        <div class="min-w-0 flex-1">
          <h1
            class="text-xl sm:text-2xl lg:text-3xl font-bold text-white truncate"
          >
            Recargar BARAS
          </h1>
          <p class="text-slate-400 text-xs sm:text-sm mt-0.5 lg:mt-1">
            Compra BARAS de forma rápida y segura.
          </p>
        </div>
      </div>
    </header>

    <div
      class="grid grid-cols-1 lg:grid-cols-12 gap-4 lg:gap-8 pb-28 lg:pb-0 h-full min-h-0"
    >
      <!-- Left Column: Steps -->
      <div class="lg:col-span-8 flex flex-col relative w-full max-w-full">
        <!-- STEP 1: CALCULATOR -->
        <div
          id="step-1"
          class="step-content flex flex-col gap-4 lg:gap-6 h-auto animate-fade-in"
        >
          <section
            class="bg-brand-black border border-white/10 p-3 sm:p-4 lg:p-6 rounded-2xl lg:rounded-4xl flex flex-col justify-start relative group"
          >
            <!-- Top Label -->
            <div class="text-center mb-2 sm:mb-3 lg:mb-8">
              <span
                class="bg-brand-lime/10 text-brand-lime border border-brand-lime/20 px-2.5 py-1 rounded-full text-[10px] sm:text-xs font-bold uppercase tracking-wider inline-block"
                >Paso 1 de 3</span
              >
              <h2
                class="text-lg sm:text-xl lg:text-2xl font-bold text-white mt-2 sm:mt-3 lg:mt-4 px-2"
              >
                ¿Cuánto deseas recargar?
              </h2>
            </div>

            <!-- Calculator Inputs -->
            <div
              class="flex flex-col gap-2 sm:gap-4 max-w-md mx-auto w-full relative z-10"
            >
              <!-- Input BS -->
              <div class="relative group/input">
                <label
                  class="text-[10px] sm:text-xs text-slate-500 font-bold ml-3 sm:ml-4 mb-1 block uppercase"
                  >Monto en Bolívares</label
                >
                <div class="relative">
                  <span
                    class="absolute left-4 sm:left-6 top-1/2 -translate-y-1/2 text-lg sm:text-xl font-bold text-slate-500 group-focus-within/input:text-brand-lime transition-colors"
                    >Bs</span
                  >
                  <input
                    type="number"
                    id="input-bs"
                    inputmode="decimal"
                    placeholder="0.00"
                    class="w-full bg-black/30 border border-white/10 rounded-xl sm:rounded-2xl py-3 sm:py-4 lg:py-5 pl-12 sm:pl-14 pr-4 sm:pr-6 text-xl sm:text-2xl font-bold text-white focus:outline-none focus:border-brand-lime/50 transition-all placeholder:text-slate-700 text-right"
                  />
                </div>
              </div>

              <!-- Swap Icon -->
              <div
                class="flex justify-center -my-1 sm:-my-2 relative z-10 py-1 sm:py-5"
              >
                <div
                  class="bg-brand-black border border-white/10 p-1.5 sm:p-2 rounded-full text-slate-400"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-3.5 w-3.5 sm:h-4 sm:w-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"
                    ></path>
                  </svg>
                </div>
              </div>

              <!-- Input BARAS -->
              <div class="relative group/input">
                <label
                  class="text-[10px] sm:text-xs text-slate-500 font-bold ml-3 sm:ml-4 mb-1 block uppercase"
                  >Recibes en BARAS</label
                >
                <div class="relative">
                  <span
                    class="absolute left-4 sm:left-6 top-1/2 -translate-y-1/2 text-lg sm:text-xl font-bold text-slate-500 group-focus-within/input:text-brand-lime transition-colors"
                    >C</span
                  >
                  <input
                    type="number"
                    id="input-capy"
                    inputmode="decimal"
                    placeholder="0.00"
                    class="w-full bg-black/30 border border-white/10 rounded-xl sm:rounded-2xl py-3 sm:py-4 lg:py-5 pl-12 sm:pl-14 pr-4 sm:pr-6 text-xl sm:text-2xl font-bold text-brand-lime focus:outline-none focus:border-brand-lime/50 transition-all placeholder:text-slate-700 text-right"
                  />
                </div>
              </div>

              <!-- PC Quick Chips -->
              <div class="hidden lg:flex gap-3 justify-center pt-2">
                <button
                  data-action="set-amount"
                  data-value="5"
                  class="px-3 py-1.5 bg-white/5 rounded-full text-xs font-bold text-slate-300 hover:bg-brand-lime hover:text-black transition-colors whitespace-nowrap active:scale-95 border border-white/5"
                  >5 BARAS</button
                >
                <button
                  data-action="set-amount"
                  data-value="10"
                  class="px-3 py-1.5 bg-white/5 rounded-full text-xs font-bold text-slate-300 hover:bg-brand-lime hover:text-black transition-colors whitespace-nowrap active:scale-95 border border-white/5"
                  >10 BARAS</button
                >
                <button
                  data-action="set-amount"
                  data-value="20"
                  class="px-3 py-1.5 bg-white/5 rounded-full text-xs font-bold text-slate-300 hover:bg-brand-lime hover:text-black transition-colors whitespace-nowrap active:scale-95 border border-white/5"
                  >20 BARAS</button
                >
                <button
                  data-action="set-amount"
                  data-value="50"
                  class="px-3 py-1.5 bg-white/5 rounded-full text-xs font-bold text-slate-300 hover:bg-brand-lime hover:text-black transition-colors whitespace-nowrap active:scale-95 border border-white/5"
                  >50 BARAS</button
                >
              </div>
            </div>

            <!-- Mobile Keypad Container (Visible on Mobile) -->
            <div class="lg:hidden mt-3 sm:mt-6 w-full max-w-sm mx-auto px-1">
              <!-- Quick Chips -->
              <div
                class="flex gap-1 sm:gap-2 justify-center mb-2 sm:mb-4 overflow-x-auto pb-2 no-scrollbar"
              >
                <button
                  data-action="set-amount"
                  data-value="5"
                  class="px-2 sm:px-3 py-0.5 sm:py-1.5 bg-white/5 rounded-full text-[10px] font-bold text-slate-300 hover:bg-brand-lime hover:text-black transition-colors whitespace-nowrap active:scale-95 flex-shrink-0"
                  >5 BARAS</button
                >
                <button
                  data-action="set-amount"
                  data-value="10"
                  class="px-2 sm:px-3 py-0.5 sm:py-1.5 bg-white/5 rounded-full text-[10px] font-bold text-slate-300 hover:bg-brand-lime hover:text-black transition-colors whitespace-nowrap active:scale-95 flex-shrink-0"
                  >10 BARAS</button
                >
                <button
                  data-action="set-amount"
                  data-value="20"
                  class="px-2 sm:px-3 py-0.5 sm:py-1.5 bg-white/5 rounded-full text-[10px] font-bold text-slate-300 hover:bg-brand-lime hover:text-black transition-colors whitespace-nowrap active:scale-95 flex-shrink-0"
                  >20 BARAS</button
                >
                <button
                  data-action="set-amount"
                  data-value="50"
                  class="px-2 sm:px-3 py-0.5 sm:py-1.5 bg-white/5 rounded-full text-[10px] font-bold text-slate-300 hover:bg-brand-lime hover:text-black transition-colors whitespace-nowrap active:scale-95 flex-shrink-0"
                  >50 BARAS</button
                >
              </div>

              <!-- Numpad -->
              <div class="grid grid-cols-3 gap-1 sm:gap-2">
                <button
                  class="keypad-btn p-2.5 sm:p-3 rounded-lg sm:rounded-xl bg-white/5 text-lg sm:text-xl font-bold text-white active:bg-white/10 active:scale-95 transition-all"
                  >1</button
                >
                <button
                  class="keypad-btn p-2.5 sm:p-3 rounded-lg sm:rounded-xl bg-white/5 text-lg sm:text-xl font-bold text-white active:bg-white/10 active:scale-95 transition-all"
                  >2</button
                >
                <button
                  class="keypad-btn p-2.5 sm:p-3 rounded-lg sm:rounded-xl bg-white/5 text-lg sm:text-xl font-bold text-white active:bg-white/10 active:scale-95 transition-all"
                  >3</button
                >
                <button
                  class="keypad-btn p-2.5 sm:p-3 rounded-lg sm:rounded-xl bg-white/5 text-lg sm:text-xl font-bold text-white active:bg-white/10 active:scale-95 transition-all"
                  >4</button
                >
                <button
                  class="keypad-btn p-2.5 sm:p-3 rounded-lg sm:rounded-xl bg-white/5 text-lg sm:text-xl font-bold text-white active:bg-white/10 active:scale-95 transition-all"
                  >5</button
                >
                <button
                  class="keypad-btn p-2.5 sm:p-3 rounded-lg sm:rounded-xl bg-white/5 text-lg sm:text-xl font-bold text-white active:bg-white/10 active:scale-95 transition-all"
                  >6</button
                >
                <button
                  class="keypad-btn p-2.5 sm:p-3 rounded-lg sm:rounded-xl bg-white/5 text-lg sm:text-xl font-bold text-white active:bg-white/10 active:scale-95 transition-all"
                  >7</button
                >
                <button
                  class="keypad-btn p-2.5 sm:p-3 rounded-lg sm:rounded-xl bg-white/5 text-lg sm:text-xl font-bold text-white active:bg-white/10 active:scale-95 transition-all"
                  >8</button
                >
                <button
                  class="keypad-btn p-2.5 sm:p-3 rounded-lg sm:rounded-xl bg-white/5 text-lg sm:text-xl font-bold text-white active:bg-white/10 active:scale-95 transition-all"
                  >9</button
                >
                <button
                  class="keypad-btn p-2.5 sm:p-3 rounded-lg sm:rounded-xl bg-white/5 text-lg sm:text-xl font-bold text-white active:bg-white/10 active:scale-95 transition-all"
                  >.</button
                >
                <button
                  class="keypad-btn p-2.5 sm:p-3 rounded-lg sm:rounded-xl bg-white/5 text-lg sm:text-xl font-bold text-white active:bg-white/10 active:scale-95 transition-all"
                  >0</button
                >
                <button
                  id="btn-delete"
                  class="p-2.5 sm:p-3 rounded-lg sm:rounded-xl bg-red-500/10 border border-red-500/20 text-red-400 active:bg-red-500/20 active:scale-95 transition-all flex items-center justify-center"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 sm:h-6 sm:w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2M3 12l6.414 6.414a2 2 0 001.414.586H19a2 2 0 002-2V7a2 2 0 00-2-2h-8.172a2 2 0 00-1.414.586L3 12z"
                    ></path>
                  </svg>
                </button>
              </div>
            </div>

            <!-- CTA -->
            <div class="mt-3 sm:mt-6 lg:mt-8">
              <button
                data-action="go-step"
                data-step="2"
                class="w-full bg-brand-lime text-black font-bold py-3 sm:py-4 rounded-xl sm:rounded-2xl hover:bg-brand-lime/90 transition-colors active:scale-[0.98] text-base sm:text-lg"
              >
                Continuar →
              </button>
            </div>
          </section>
        </div>

        <!-- STEP 2: PAYMENT METHOD -->
        <div
          id="step-2"
          class="step-content hidden flex-col gap-4 lg:gap-6 h-auto animate-fade-in"
        >
          <section
            class="bg-brand-black border border-white/10 p-3 sm:p-4 lg:p-6 rounded-2xl lg:rounded-4xl flex flex-col justify-start relative group"
          >
            <!-- Top Label -->
            <div class="text-center mb-3 sm:mb-4 lg:mb-8">
              <span
                class="bg-brand-lime/10 text-brand-lime border border-brand-lime/20 px-2.5 py-1 rounded-full text-[10px] sm:text-xs font-bold uppercase tracking-wider inline-block"
                >Paso 2 de 3</span
              >
              <h2
                class="text-lg sm:text-xl lg:text-2xl font-bold text-white mt-2 sm:mt-3 lg:mt-4 px-2"
              >
                Elige tu método de pago
              </h2>
            </div>

            <div class="flex flex-col gap-3 sm:gap-4 max-w-md mx-auto w-full">
              <!-- Pago Móvil -->
              <button
                id="btn-pago-movil"
                data-action="select-method"
                data-method="pago-movil"
                class="p-3 sm:p-4 rounded-xl sm:rounded-2xl border border-white/5 text-slate-400 hover:border-brand-lime/50 hover:bg-brand-lime/5 transition-all flex items-center gap-3 sm:gap-4 text-left active:scale-[0.98]"
              >
                <div
                  class="w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-purple-500/10 flex items-center justify-center shrink-0"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 sm:h-6 sm:w-6 text-purple-400"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="font-bold text-base sm:text-lg">Pago Móvil</div>
                  <div class="text-sm sm:text-base text-slate-500">
                    Desde tu banco móvil
                  </div>
                </div>
              </button>

              <!-- Transferencia -->
              <button
                id="btn-transferencia"
                data-action="select-method"
                data-method="transferencia"
                class="p-3 sm:p-4 rounded-xl sm:rounded-2xl border border-white/5 text-slate-400 hover:border-brand-lime/50 hover:bg-brand-lime/5 transition-all flex items-center gap-3 sm:gap-4 text-left active:scale-[0.98]"
              >
                <div
                  class="w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-blue-500/10 flex items-center justify-center shrink-0"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 sm:h-6 sm:w-6 text-blue-400"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"
                    ></path>
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="font-bold text-base sm:text-lg">
                    Transferencia
                  </div>
                  <div class="text-sm sm:text-base text-slate-500">
                    Desde tu banca en línea
                  </div>
                </div>
              </button>

              <!-- Detalles dinámicos -->
              <div
                id="payment-details-container"
                class="overflow-hidden transition-all"
                style="max-height: 0; opacity: 0;"
              >
                <!-- Pago Móvil Info -->
                <div id="info-pago-movil" class="hidden mt-2 sm:mt-3">
                  <div
                    class="bg-purple-500/5 border border-purple-500/20 rounded-xl sm:rounded-2xl p-3 sm:p-4"
                  >
                    <h3
                      class="text-xs sm:text-sm font-bold text-purple-400 mb-2 sm:mb-3"
                    >
                      Datos para Pago Móvil
                    </h3>
                    <div class="space-y-2">
                      <div
                        class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-1 sm:gap-0"
                      >
                        <span class="text-xs text-slate-500">Banco:</span>
                        <div class="flex items-center gap-2">
                          <span class="text-xs sm:text-sm font-mono text-white"
                            >0102 - Banco de Venezuela</span
                          >
                          <button
                            data-action="copy"
                            data-text="0102"
                            class="text-brand-lime hover:text-brand-lime/80 transition-colors shrink-0"
                          >
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              class="h-3.5 w-3.5 sm:h-4 sm:w-4"
                              fill="none"
                              viewBox="0 0 24 24"
                              stroke="currentColor"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                              ></path>
                            </svg>
                          </button>
                        </div>
                      </div>

                      <div
                        class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-1 sm:gap-0"
                      >
                        <span class="text-xs text-slate-500">Teléfono:</span>
                        <div class="flex items-center gap-2">
                          <span class="text-xs sm:text-sm font-mono text-white"
                            >0414-1234567</span
                          >
                          <button
                            data-action="copy"
                            data-text="04141234567"
                            class="text-brand-lime hover:text-brand-lime/80 transition-colors shrink-0"
                          >
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              class="h-3.5 w-3.5 sm:h-4 sm:w-4"
                              fill="none"
                              viewBox="0 0 24 24"
                              stroke="currentColor"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                              ></path>
                            </svg>
                          </button>
                        </div>
                      </div>

                      <div
                        class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-1 sm:gap-0"
                      >
                        <span class="text-xs text-slate-500">Cédula:</span>
                        <div class="flex items-center gap-2">
                          <span class="text-xs sm:text-sm font-mono text-white"
                            >V-12345678</span
                          >
                          <button
                            data-action="copy"
                            data-text="12345678"
                            class="text-brand-lime hover:text-brand-lime/80 transition-colors shrink-0"
                          >
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              class="h-3.5 w-3.5 sm:h-4 sm:w-4"
                              fill="none"
                              viewBox="0 0 24 24"
                              stroke="currentColor"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                              ></path>
                            </svg>
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Transferencia Info -->
                <div id="info-transferencia" class="hidden mt-2 sm:mt-3">
                  <div
                    class="bg-blue-500/5 border border-blue-500/20 rounded-xl sm:rounded-2xl p-3 sm:p-4"
                  >
                    <h3
                      class="text-xs sm:text-sm font-bold text-blue-400 mb-2 sm:mb-3"
                    >
                      Datos Bancarios
                    </h3>
                    <div class="space-y-2">
                      <div
                        class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-1 sm:gap-0"
                      >
                        <span class="text-xs text-slate-500">Banco:</span>
                        <div class="flex items-center gap-2">
                          <span
                            class="text-xs sm:text-sm font-mono text-white break-all sm:break-normal"
                            >0102 - Banco de Venezuela</span
                          >
                          <button
                            data-action="copy"
                            data-text="0102"
                            class="text-brand-lime hover:text-brand-lime/80 transition-colors shrink-0"
                          >
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              class="h-3.5 w-3.5 sm:h-4 sm:w-4"
                              fill="none"
                              viewBox="0 0 24 24"
                              stroke="currentColor"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                              ></path>
                            </svg>
                          </button>
                        </div>
                      </div>

                      <div
                        class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-1 sm:gap-0"
                      >
                        <span class="text-xs text-slate-500">Cuenta:</span>
                        <div class="flex items-center gap-2">
                          <span
                            class="text-xs sm:text-sm font-mono text-white break-all sm:break-normal"
                            >0102-0123-45-6789012345</span
                          >
                          <button
                            data-action="copy"
                            data-text="01020123456789012345"
                            class="text-brand-lime hover:text-brand-lime/80 transition-colors shrink-0"
                          >
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              class="h-3.5 w-3.5 sm:h-4 sm:w-4"
                              fill="none"
                              viewBox="0 0 24 24"
                              stroke="currentColor"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
