---
import MainLayout from "../layouts/MainLayout.astro";
import ExchangeRateWidget from "../components/ExchangeRateWidget.astro";
---

<MainLayout title="Recargar Saldo | CapyPay" showSidebar={true}>
  <div class="flex flex-col gap-6 h-full p-4 lg:p-0 relative">
    <!-- Header Page -->
    <header
      class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 shrink-0"
    >
      <div class="flex items-center gap-4">
        <a
          href="/dashboard"
          class="w-10 h-10 rounded-full border border-white/10 flex items-center justify-center text-slate-400 hover:text-white hover:bg-white/5 transition-colors"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"></path>
          </svg>
        </a>
        <div>
          <h1 class="text-2xl lg:text-3xl font-bold text-white">
            Recargar Capys 
          </h1>
          <p class="text-slate-400 text-sm mt-1">
            Compra Capys de forma r谩pida y segura.
          </p>
        </div>
      </div>
    </header>

    <div
      class="grid grid-cols-1 lg:grid-cols-12 gap-8 pb-20 lg:pb-0 h-full min-h-0"
    >
      <!-- Left Column: Steps -->
      <div class="lg:col-span-8 flex flex-col h-full min-h-0 relative w-xl">
        <!-- STEP 1: CALCULATOR -->
        <div
          id="step-1"
          class="step-content flex flex-col gap-6 h-auto animate-fade-in"
        >
          <section
            class="bg-brand-black border border-white/10 p-4 lg:p-6 rounded-4xl flex flex-col justify-start relative group"
          >
            <!-- Top Label -->
            <div class="text-center mb-4 lg:mb-8">
              <span
                class="bg-brand-lime/10 text-brand-lime border border-brand-lime/20 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider"
                >Paso 1 de 3</span
              >
              <h2 class="text-xl lg:text-2xl font-bold text-white mt-4">
                驴Cu谩nto deseas recargar?
              </h2>
            </div>

            <!-- Calculator Inputs -->
            <div
              class="flex flex-col gap-4 max-w-md mx-auto w-full relative z-10"
            >
              <!-- Input BS -->
              <div class="relative group/input">
                <label
                  class="text-xs text-slate-500 font-bold ml-4 mb-1 block uppercase"
                  >Monto en Bol铆vares</label
                >
                <div class="relative">
                  <span
                    class="absolute left-6 top-1/2 -translate-y-1/2 text-xl font-bold text-slate-500 group-focus-within/input:text-brand-lime transition-colors"
                    >Bs</span
                  >
                  <input
                    type="number"
                    id="input-bs"
                    inputmode="decimal"
                    placeholder="0.00"
                    class="w-full bg-black/30 border border-white/10 rounded-2xl py-4 lg:py-5 pl-14 pr-6 text-2xl font-bold text-white focus:outline-none focus:border-brand-lime/50 transition-all placeholder:text-slate-700 text-right"
                  />
                </div>
              </div>

              <!-- Swap Icon -->
              <div class="flex justify-center -my-2 relative z-10 p-5">
                <div
                  class="bg-brand-black border border-white/10 p-2 rounded-full text-slate-400"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
