        </div>

        <!-- STEP 3: CONFIRMATION -->
        <div
          id="step-3"
          class="step-content hidden flex-col gap-6 h-full animate-fade-in"
        >
          <section
            class="bg-brand-black border border-white/10 p-6 rounded-4xl flex-1 flex flex-col"
          >
            <div class="flex items-center justify-between mb-8">
              <div class="flex items-center gap-3">
                <span
                  class="bg-brand-lime/10 text-brand-lime border border-brand-lime/20 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider"
