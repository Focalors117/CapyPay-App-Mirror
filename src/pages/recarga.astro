                  <input
                    type="number"
                    id="input-capy"
                    inputmode="decimal"
                    placeholder="0.00"
                    class="w-full bg-black/30 border border-white/10 rounded-2xl py-4 lg:py-5 pl-14 pr-6 text-2xl font-bold text-brand-lime focus:outline-none focus:border-brand-lime/50 transition-all placeholder:text-slate-700 text-right"
                  />
