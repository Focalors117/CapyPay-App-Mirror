              <!-- Bot贸n Transf -->
              <button
                id="btn-transferencia"
                data-action="select-method"
                data-method="transferencia"
                class="payment-method-btn flex items-center justify-center gap-3 p-6 rounded-2xl border-2 border-white/5 text-slate-400 hover:border-white/20 hover:text-white transition-all font-bold bg-black/20"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"
                  ></path>
                </svg>
