---
import MainLayout from "../layouts/MainLayout.astro";
import { cartItems, clearCart } from "../store/cartStore";
// Import transaction service if strictly needed server side?
// Actually, transactionService is likely a client-side module if it uses fetch globally or similar.
// But we are using it inside <script> tag.
---

<MainLayout title="Resumen de Pago | CapyPay" showSidebar={true}>
  <div class="max-w-2xl mx-auto p-4 md:p-8">
    <a
      href="/comedor"
      class="inline-flex items-center gap-2 text-white/50 hover:text-white mb-6"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg
      >
      Volver al menú
    </a>

    <h1 class="text-3xl font-extrabold text-white mb-8">Resumen del Pedido</h1>

    <div class="grid gap-8">
      <!-- Order Items -->
      <div class="bg-[#1a1a1a] border border-white/10 rounded-3xl p-6">
        <h2 class="text-lg font-bold text-white mb-4">Detalle de items</h2>
        <div
          id="checkout-items"
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-4"
        >
          <!-- Fallback content, will be replaced by JS -->
          <div class="animate-pulse flex items-center gap-4">
            <div class="w-16 h-16 bg-white/10 rounded-xl"></div>
            <div class="flex-1 space-y-2">
              <div class="h-4 bg-white/10 rounded w-1/2"></div>
              <div class="h-3 bg-white/10 rounded w-1/4"></div>
            </div>
          </div>
        </div>

        <!-- Summary Lines -->
        <div class="border-t border-white/5 pt-4 space-y-2 mb-4">
          <div class="flex justify-between text-sm">
            <span class="text-white/60">Subtotal</span>
            <span id="checkout-subtotal" class="text-white font-bold"
              >0.00 BARAS</span
            >
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-white/60">Comisión (5%)</span>
            <span id="checkout-fee" class="text-white/80">0.00 BARAS</span>
          </div>
        </div>

        <div
          class="border-t border-dashed border-white/10 pt-4 flex justify-between items-end"
        >
          <span class="text-white/60">Total a pagar</span>
          <span id="checkout-total" class="text-3xl font-black text-brand-lime"
            >0.00 BARAS</span
          >
        </div>
      </div>

      <!-- Payment Action -->
      <div class="bg-brand-black border border-white/10 rounded-3xl p-6">
        <h2 class="text-lg font-bold text-white mb-2">Método de Pago</h2>
        <div
          class="flex items-center gap-4 bg-white/5 p-4 rounded-xl border border-white/5 mb-6"
        >
          <div
            class="w-10 h-10 rounded-full bg-brand-lime flex items-center justify-center text-black"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg
            >
          </div>
          <div>
            <h4 class="text-white font-bold">Saldo CapyPay</h4>
            <p class="text-white/50 text-xs">Pago instantáneo sin comisiones</p>
          </div>
        </div>

        <button
          id="do-payment-btn"
          class="w-full py-4 bg-brand-purple hover:bg-brand-purple/90 text-white font-extrabold rounded-xl transition-all active:scale-95 flex items-center justify-center gap-2 relative overflow-hidden group"
        >
          <span class="relative z-10 flex items-center gap-2">
            Confirmar Pago
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 13l4 4L19 7"></path></svg
            >
          </span>
          <div
            class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300"
          >
          </div>
        </button>
      </div>
    </div>
  </div>

  <script>
    // @ts-nocheck
    import { cartItems, clearCart } from "../store/cartStore";
    import { authService, comedorService, fetchAPI } from "../services/api";
    import { showToast } from "../utils/toast";

    const itemsContainer = document.getElementById("checkout-items");
    const subtotalEl = document.getElementById("checkout-subtotal");
    const feeEl = document.getElementById("checkout-fee");
    const totalEl = document.getElementById("checkout-total");
    const payBtn = document.getElementById("do-payment-btn"); // Removed TS casting

    if (itemsContainer && totalEl && payBtn) {
      // 1. Logic for Price Sync & Rendering
      async function initCheckout() {
        let items = cartItems.get();
        let itemsArray = Object.values(items);

        if (itemsArray.length === 0) {
          window.location.href = "/comedor";
          return;
        }

        // --- PRICE SYNC START ---
        try {
          const CACHE_KEY = "capypay_menu_cache_v3";
          // 7 Days validation (Matches Comedor)
          const CACHE_DURATION = 7 * 24 * 60 * 60 * 1000;
          let menuData = null;

          // 1. Try Cache
          const cached = localStorage.getItem(CACHE_KEY);
          if (cached) {
            const parsed = JSON.parse(cached);
            if (Date.now() - parsed.timestamp < CACHE_DURATION) {
              menuData = parsed.data;
              console.log("Checkout: Using cached prices");
            }
          }

          // 2. Refresh Cache if needed (Once a week or initial load)
          if (!menuData) {
            console.log("Checkout: Refreshing prices from API...");
            menuData = await fetchAPI("/comedor/menu");
            if (menuData) {
              localStorage.setItem(
                CACHE_KEY,
                JSON.stringify({
                  timestamp: Date.now(),
                  data: menuData,
                }),
              );
            }
          }

          // 3. Update Cart Prices
          if (menuData) {
            const priceMap = new Map();
            // Flatten all possible sources
            if (menuData.platoDia)
              priceMap.set(
                String(menuData.platoDia.id),
                parseFloat(menuData.platoDia.price),
              );
            if (menuData.popularItems)
              menuData.popularItems.forEach((i) =>
                priceMap.set(String(i.id), parseFloat(i.price)),
              );
            if (menuData.items)
              menuData.items.forEach((i) =>
                priceMap.set(String(i.id), parseFloat(i.price)),
              );

            let pricesUpdated = false;

            itemsArray.forEach((item) => {
              const freshPrice = priceMap.get(String(item.id));
              // Only update if fresh price exists and is different
              // If fresh price is missing (e.g. item removed from menu), we keep old price or warn?
              // For now, keep old price to avoid breaking UI, user will get error on buy if actually invalid.
              if (
                freshPrice !== undefined &&
                freshPrice !== parseFloat(item.price)
              ) {
                console.warn(
                  `Updating price for ${item.name}: ${item.price} -> ${freshPrice}`,
                );
                item.price = freshPrice;
                pricesUpdated = true;
                // Persist to store logic
                cartItems.setKey(item.id, { ...item, price: freshPrice });
              }
            });

            if (pricesUpdated) {
              items = cartItems.get(); // Refresh local reference
              itemsArray = Object.values(items);
              showToast("⚠️ Precios actualizados al valor actual", "info");
            }
          }
        } catch (e) {
          console.error("Price Sync Error:", e);
          // Fail gracefully, use existing cart prices
        }
        // --- PRICE SYNC END ---

        renderItems(itemsArray);
      }

      function renderItems(itemsArray) {
        let subtotal = 0;

        // Render items
        itemsContainer.innerHTML = itemsArray
          .map((item) => {
            const itemTotal = item.price * item.quantity;
            subtotal += itemTotal;
            return `
                    <div class="flex justify-between items-center bg-white/5 p-3 rounded-xl border border-white/5">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-lg bg-black/20 flex items-center justify-center text-white/50 font-bold text-xs border border-white/5">
                                x${item.quantity}
                            </div>
                            <div class="flex flex-col">
                                <h4 class="text-white font-bold text-sm text-balance">${item.name}</h4>
                                <span class="text-[10px] text-white/40">Unitario: $${item.price}</span>
                            </div>
                        </div>
                        <span class="text-white font-bold text-sm text-brand-lime">${itemTotal.toLocaleString()} BARAS</span>
                    </div>
                `;
          })
          .join("");

        // Calculate totals
        const commission = Math.round(subtotal * 0.05); // 5% Simulation
        const totalAmount = subtotal + commission;

        if (subtotalEl)
          subtotalEl.textContent = `${subtotal.toLocaleString()} BARAS`;
        if (feeEl) feeEl.textContent = `${commission.toLocaleString()} BARAS`;
        totalEl.textContent = `${totalAmount.toLocaleString()} BARAS`;

        // Store total in memory for logic usage? No need, recalculated on backend.
      }

      // Run Init
      initCheckout();

      // 2. Lógica de Pago
      payBtn.addEventListener("click", async () => {
        // Refresh items from store to get latest state
        const currentItems = Object.values(cartItems.get());
        const btn = payBtn;
        const originalText = btn.innerHTML;

        try {
          btn.disabled = true;
          btn.innerHTML = `<span class="animate-spin h-5 w-5 border-2 border-white border-t-transparent rounded-full mr-2"></span> Procesando...`;

          const userStr = localStorage.getItem("capypay_user");
          if (!userStr) throw new Error("Debes iniciar sesión");
          const user = JSON.parse(userStr);

          // Validar identificador de usuario
          const userId = user.id || user.usuarioId;
          if (!userId)
            throw new Error("ID de usuario no encontrado en sesión local");

          // CALCULAR TOTAL LOCALMENTE PARA VALIDACIÓN PREVIA
          const totalLocal = currentItems.reduce(
            (acc, item) => acc + parseFloat(item.price) * item.quantity,
            0,
          );
          const commissionLocal = Math.round(totalLocal * 0.05);
          const grandTotal = totalLocal + commissionLocal;

          const userBalance = parseFloat(user.balance || 0);

          if (userBalance < grandTotal) {
            throw new Error(
              `Saldo insuficiente. Tienes ${userBalance.toFixed(2)} pero necesitas ${grandTotal.toFixed(2)}.`,
            );
          }

          // Prepare payload for Create Order
          // Backend expects { id, quantity }
          const orderItems = currentItems.map((item) => ({
            id: item.id,
            quantity: item.quantity,
            price: item.price, // Send price just in case, but backend should verify
          }));

          const response = await comedorService.createOrder(userId, orderItems);

          if (!response) throw new Error("Error al crear la orden");

          showToast("¡Pago realizado con éxito! + XP ganada", "success");

          // Clear cart
          clearCart();

          // Redirect to Receipt page
          // response usually contains { message, orderId, newBalance, xpGained }
          if (response.orderId) {
            window.location.href = `/order?id=${response.orderId}`;
          } else {
            // Fallback if no specific order ID (should not happen with new logic)
            window.location.href = "/history";
          }
        } catch (error) {
          console.error("Payment Error:", error);
          showToast(error.message || "Error al procesar el pago", "error");
          btn.disabled = false;
          btn.innerHTML = originalText;
        }
      });
    }
  </script></MainLayout
>
