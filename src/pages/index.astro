---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Bienvenido a CapyPay">
  <div
    class="flex flex-col items-center justify-center min-h-screen text-center gap-6"
  >
    <h1 class="text-5xl font-bold text-white mb-4">
      Bienvenido a <span class="text-emerald-400">CapyPay</span>
    </h1>
    <p class="text-slate-400 text-xl max-w-2xl">
      La forma más rápida y segura de manejar tus finanzas.
    </p>

    <div class="flex gap-4 mt-8">
      <a
        href="/dashboard"
        class="bg-emerald-500 hover:bg-emerald-600 text-white font-bold py-3 px-8 rounded-full transition-colors shadow-lg hover:shadow-emerald-500/20"
      >
        Ir al Dashboard
      </a>
      <button
        class="border border-white/20 hover:bg-white/10 text-white font-medium py-3 px-8 rounded-full transition-colors"
      >
        Saber más
      </button>
    </div>
  </div>
</MainLayout>
