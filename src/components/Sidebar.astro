// src/components/Sidebar.astro
---

<aside
  id="sidebar"
  class="group flex flex-col h-screen sticky top-0 z-50 transition-all duration-300 w-20 bg-[#0a0a0a] border-r border-brand-lime/20 shrink-0"
>
  <!-- Header: Logo, Collapse -->
  <div
    class="flex flex-col shrink-0 border-b border-brand-lime/10 transition-all duration-300 pb-2"
    id="headerSection"
  >
    <!-- Logo & Name -->
    <div
      class="h-16 flex items-center px-6 transition-all duration-300 w-full overflow-hidden whitespace-nowrap"
    >
      <div class="flex items-center transition-all duration-300">
        <div
          class="w-8 h-8 bg-brand-lime rounded-lg flex items-center justify-center text-black font-bold shadow-[0_0_15px_rgba(215,253,73,0.3)] shrink-0"
        >
          C
        </div>
        <span
          class="text-xl font-bold text-white sidebar-content opacity-0 pointer-events-none max-w-0 overflow-hidden ml-0 transition-all duration-500 ease-in-out"
        >
          CapyPay
        </span>
      </div>
    </div>

    <!-- Toggle Buttons -->
    <div
      class="w-full flex justify-center px-0 transition-all duration-300"
      id="toggleContainer"
    >
      <!-- Collapse Button -->
      <button
        id="sidebarToggle"
        class="text-slate-400 hover:text-white hover:bg-white/5 rounded-lg transition-all p-1"
        aria-label="Toggle Sidebar"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 transition-transform duration-300 rotate-180"
          id="toggleIcon"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- User Profile Section -->
  <div
    class="flex flex-col items-center p-2 py-6 border-b border-white/5 overflow-hidden whitespace-nowrap transition-all duration-300 origin-top"
  >
    <!-- Profile Photo (Clickable) -->
    <a
      href="/profile"
      class="w-10 h-10 rounded-full p-1 bg-brand-lime/20 mb-3 shadow-[0_0_15px_rgba(215,253,72,0.1)] transition-all duration-300 sidebar-photo border border-brand-lime/30 hover:scale-105 hover:shadow-[0_0_20px_rgba(215,253,72,0.3)]"
      title="Ver mi perfil"
    >
      <img
        src="https://api.dicebear.com/9.x/lorelei/svg?seed=Aneka"
        alt="User Profile"
        class="w-full h-full rounded-full bg-black object-cover"
      />
    </a>

    <!-- Profile Info Wrapper (Name & Level) -->
    <div
      class="w-full flex flex-col items-center overflow-hidden transition-all duration-300 profile-content max-h-0 opacity-0"
    >
      <!-- Name -->
      <h3 id="sidebar-username" class="text-white font-semibold text-lg mb-1">
        Cargando...
      </h3>

      <!-- Level Bar -->
      <div class="w-full mt-2">
        <div class="flex justify-between text-xs text-slate-400 mb-1">
          <span>Nivel Actual</span>
          <span class="text-brand-lime font-bold">12</span>
        </div>
        <div class="w-full bg-slate-800 rounded-full h-1.5 overflow-hidden">
          <div
            class="bg-brand-lime h-full rounded-full w-[65%] shadow-[0_0_10px_rgba(215,253,72,0.5)]"
          >
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- MAIN NAVIGATION (Dashboard + Notifs + Profile) -->
  <div class="flex flex-col gap-1 px-3 mt-4 border-b border-white/5 pb-4">
    <!-- Dashboard Link -->
    <a
      href="/dashboard"
      class="group/nav flex items-center p-2 rounded-lg hover:bg-white/5 transition-colors relative w-full text-left"
      title="Ir al Dashboard"
    >
      <div class="relative shrink-0">
        <div
          class="w-9 h-9 rounded-full bg-slate-800 flex items-center justify-center text-slate-400 group-hover/nav:text-brand-lime transition-colors"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
            ></path>
          </svg>
        </div>
      </div>
      <div
        class="overflow-hidden whitespace-nowrap sidebar-content opacity-0 pointer-events-none max-w-0 ml-0 transition-all duration-500 ease-in-out"
      >
        <p class="text-sm text-slate-200 font-medium truncate">Dashboard</p>
      </div>
    </a>

    <!-- Notifications Link -->
    <a
      href="/notifications"
      class="group/nav flex items-center p-2 rounded-lg hover:bg-white/5 transition-colors relative w-full text-left"
      title="Notificaciones"
    >
      <div class="relative shrink-0">
        <div
          class="w-9 h-9 rounded-full bg-slate-800 flex items-center justify-center text-slate-400 group-hover/nav:text-brand-lime transition-colors"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
            ></path>
          </svg>
          <!-- Badge -->
          <span
            id="notif-badge"
            class="hidden absolute top-0 right-0 w-2.5 h-2.5 bg-red-500 rounded-full border-2 border-[#0a0a0a] shadow-[0_0_5px_rgba(239,68,68,0.5)]"
          ></span>
        </div>
      </div>
      <div
        class="overflow-hidden whitespace-nowrap sidebar-content opacity-0 pointer-events-none max-w-0 ml-0 transition-all duration-500 ease-in-out"
      >
        <p class="text-sm text-slate-200 font-medium truncate">
          Notificaciones
        </p>
      </div>
    </a>

    <!-- Profile Link -->
    <a
      href="/profile"
      class="group/nav flex items-center p-2 rounded-lg hover:bg-white/5 transition-colors relative w-full text-left"
      title="Mi Perfil"
    >
      <div class="relative shrink-0">
        <div class="w-9 h-9 rounded-full bg-slate-800 flex items-center justify-center overflow-hidden border border-white/10">
          <img
            src="https://api.dicebear.com/9.x/lorelei/svg?seed=Aneka"
            alt="Profile"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
      <div
        class="overflow-hidden whitespace-nowrap sidebar-content opacity-0 pointer-events-none max-w-0 ml-0 transition-all duration-500 ease-in-out"
      >
        <p class="text-sm text-slate-200 font-medium truncate">
          Mi Perfil
        </p>
      </div>
    </a>
  </div>

  <!-- Contacts Section -->
  <div
    class="flex-1 overflow-hidden hover:overflow-y-auto custom-scrollbar flex flex-col py-4"
  >
    <!-- Search Bar -->
    <div class="px-3 mb-4">
      <div class="relative group/search">
        <input
          id="sidebar-search-input"
          type="text"
          placeholder="Buscar..."
          class="bg-slate-800/50 text-slate-200 text-sm rounded-lg border-white/5 focus:outline-none focus:border-brand-lime/50 focus:bg-slate-800 transition-all placeholder:text-slate-500 w-0 p-0 opacity-0 pointer-events-none border-0"
        />
        <div
          class="w-full h-10 relative mx-auto cursor-pointer bg-slate-800/50 rounded-lg hover:bg-white/5 transition-colors flex items-center justify-center text-slate-500 sidebar-search-icon"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Contacts Title -->
    <div
      class="px-3 mb-2 sidebar-content opacity-0 pointer-events-none max-w-0 overflow-hidden ml-3 transition-all duration-500 ease-in-out"
    >
      <h4 class="text-xs font-bold text-slate-500 uppercase tracking-widest">
        Frecuentes
      </h4>
    </div>

    <div id="sidebar-contacts-list" class="flex flex-col gap-1 px-3">
      <!-- Contactos se cargarán aquí -->
      <div
        class="p-2 text-xs text-slate-500 text-center sidebar-content opacity-0 pointer-events-none max-w-0 overflow-hidden ml-0 transition-all duration-500"
      >
        Cargando...
      </div>

      <!-- Add Contact Button -->
      <a
        href="/contacts"
        class="group/add flex items-center p-2 rounded-lg hover:bg-white/5 transition-colors relative w-full text-left mt-1"
      >
        <div class="relative shrink-0">
          <div
            class="w-9 h-9 rounded-full bg-slate-800 border-2 border-dashed border-slate-600 flex items-center justify-center text-slate-400 group-hover/add:text-brand-lime group-hover/add:border-brand-lime transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 4v16m8-8H4"></path>
            </svg>
          </div>
        </div>

        <div
          class="overflow-hidden whitespace-nowrap sidebar-content opacity-0 pointer-events-none max-w-0 ml-0 transition-all duration-500 ease-in-out"
        >
          <p
            class="text-sm text-slate-400 group-hover/add:text-brand-lime font-medium truncate transition-colors"
          >
            Ver todos / Añadir
          </p>
        </div>
      </a>
    </div>
  </div>

  <!-- Footer: Settings -->
  <div
    class="p-4 border-t border-white/5 mt-auto bg-brand-black/50 flex flex-col gap-1"
  >
    <!-- Share Button -->
    <button
      class="flex items-center text-slate-400 hover:text-white hover:bg-white/5 p-2 rounded-lg transition-all group/share w-full text-left"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 shrink-0 group-hover/share:scale-110 transition-transform duration-300"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"
        ></path>
      </svg>
      <span
        class="font-medium whitespace-nowrap sidebar-content opacity-0 pointer-events-none max-w-0 ml-0 overflow-hidden transition-all duration-500 ease-in-out"
        >Compartir</span
      >
    </button>

    <!-- Settings Button -->
    <a
      href="/settings"
      class="flex items-center text-slate-400 hover:text-white hover:bg-white/5 p-2 rounded-lg transition-all group/settings w-full"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 shrink-0 group-hover/settings:rotate-90 transition-transform duration-500"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
        ></path>
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
      </svg>
      <span
        class="font-medium whitespace-nowrap sidebar-content opacity-0 pointer-events-none max-w-0 ml-0 overflow-hidden transition-all duration-500 ease-in-out"
        >Ajustes</span
      >
    </a>

    <!-- Logout Button -->
    <a
      href="#"
      id="desktop-logout-btn"
      class="flex items-center text-red-400 hover:text-red-300 hover:bg-white/5 p-2 rounded-lg transition-all group/logout w-full"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 shrink-0 group-hover/logout:translate-x-1 transition-transform duration-300"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
        ></path>
      </svg>
      <span
        class="font-medium whitespace-nowrap sidebar-content opacity-0 pointer-events-none max-w-0 ml-0 overflow-hidden transition-all duration-500 ease-in-out"
        >Cerrar Sesión</span
      >
    </a>
  </div>
</aside>

<!-- PORTAL FLOTANTE PARA MENUS CONTEXTUALES -->
<div
  id="sidebar-floating-menu"
  class="hidden fixed w-48 bg-[#1a1a1a] border border-white/10 rounded-xl shadow-[0_0_30px_rgba(0,0,0,0.5)] z-9999 overflow-hidden animate-fade-in backdrop-blur-xl"
>
  <div id="floating-menu-content" class="p-1 flex flex-col gap-0.5">
    <!-- Dynamic content -->
  </div>
</div>

<script>
  // @ts-nocheck
  import {
    authService,
    userService,
    notificationService,
  } from "../services/api.js";

  // --- Quick Transfer Handler ---
  window.handleQuickTransfer = (cedula) => {
    const currentPath = window.location.pathname;
    // Check if we are on dashboard (agnostic of trailing slash)
    if (currentPath.includes("/dashboard")) {
      // Dispatch event for TransferWidget
      const event = new CustomEvent("quick-transfer-selected", {
        detail: { cedula },
      });
      window.dispatchEvent(event);

      // Close Floating Menu
      const floatingMenu = document.getElementById("sidebar-floating-menu");
      if (floatingMenu) {
        floatingMenu.classList.add("hidden");
        floatingMenu.dataset.activeId = "";
      }
    } else {
      // Navigate to dashboard with param
      window.location.href = `/dashboard?transferTo=${cedula}`;
    }
  };

  // --- LOGICA DEL MENU LATERAL ---
  window.toggleSidebarContactMenu = (event, id) => {
    event.preventDefault();
    event.stopPropagation();

    const btn = event.currentTarget;
    const name = btn.dataset.name;
    const cedula = btn.dataset.cedula;
    const floatingMenu = document.getElementById("sidebar-floating-menu");
    const floatingContent = document.getElementById("floating-menu-content");

    if (!floatingMenu || !floatingContent) return;

    // If clicking the same button and menu is open, close it
    if (
      !floatingMenu.classList.contains("hidden") &&
      floatingMenu.dataset.activeId === id
    ) {
      floatingMenu.classList.add("hidden");
      floatingMenu.dataset.activeId = "";
      return;
    }

    // Populate Content
    floatingContent.innerHTML = `
        <div class="px-3 py-2 border-b border-white/5 mb-1">
            <p class="text-xs font-bold text-white">${name}</p>
            <p class="text-[10px] text-slate-500">${cedula}</p>
        </div>
        <button onclick="window.handleQuickTransfer('${cedula}')" class="w-full text-left px-3 py-2 text-xs font-medium text-white hover:bg-brand-lime hover:text-black rounded-lg transition-colors flex items-center gap-2">
            <span>⚡</span> Transferencia Rápida
        </button>
        <button onclick="alert('Historial con ${name}')" class="w-full text-left px-3 py-2 text-xs font-medium text-slate-400 hover:bg-white/5 hover:text-white rounded-lg transition-colors">
            Ver Historial
        </button>
      `;

    // Position logic
    const rect = btn.getBoundingClientRect();

    // Calculate specific positions
    let top = rect.top;
    const left = rect.right + 12; // 12px gap

    // Adjust if bottom overflow (menu height approx 150px)
    const menuHeight = 150;
    if (top + menuHeight > window.innerHeight) {
      top = window.innerHeight - menuHeight - 20;
    }

    floatingMenu.style.top = `${top}px`;
    floatingMenu.style.left = `${left}px`;

    floatingMenu.classList.remove("hidden");
    floatingMenu.dataset.activeId = id;
  };

  // Close menus on click outside
  document.addEventListener("click", (e) => {
    const floatingMenu = document.getElementById("sidebar-floating-menu");
    if (floatingMenu && !floatingMenu.classList.contains("hidden")) {
      const target = e.target;
      // Close if clicking outside the menu and outside the toggle buttons
      if (
        !target.closest("#sidebar-floating-menu") &&
        !target.closest('button[onclick*="toggleSidebarContactMenu"]')
      ) {
        floatingMenu.classList.add("hidden");
        floatingMenu.dataset.activeId = "";
      }
    }
  });

  // --- LOGICA DE DATOS ----
  async function initSidebar() {
    const user = authService.getCurrentUser();

    // 1. Nombre
    const nameEl = document.getElementById("sidebar-username");
    if (user && nameEl)
      nameEl.textContent = user.nombre || user.name || "Usuario";

    // 2. Contactos
    const listEl = document.getElementById("sidebar-contacts-list");
    if (listEl && user) {
      try {
        const result = await userService.getContacts(user.id || user.usuarioId);
        const contactos = result.contactos || [];

        // Boton Añadir (reutilizable)
        const addBtnHtml = `
            <a href="/contacts" class="group/add flex items-center p-2 rounded-lg hover:bg-white/5 transition-colors relative w-full text-left mt-1">
                <div class="relative shrink-0">
                <div class="w-9 h-9 rounded-full bg-slate-800 border-2 border-dashed border-slate-600 flex items-center justify-center text-slate-400 group-hover/add:text-brand-lime group-hover/add:border-brand-lime transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                </div>
                </div>
                <div class="overflow-hidden whitespace-nowrap sidebar-content opacity-0 pointer-events-none max-w-0 ml-0 transition-all duration-500 ease-in-out">
                <p class="text-sm text-slate-400 group-hover/add:text-brand-lime font-medium truncate transition-colors">Ver todos / Añadir</p>
                </div>
            </a>`;

        if (!contactos || contactos.length === 0) {
          listEl.innerHTML = `<div class="p-2 text-xs text-slate-500 text-center sidebar-content opacity-0 pointer-events-none max-w-0 overflow-hidden ml-0 transition-all duration-500">No hay contactos frecuentes</div>${addBtnHtml}`;
        } else {
          contactos.sort((a, b) =>
            b.is_favorite === a.is_favorite ? 0 : b.is_favorite ? 1 : -1,
          );

          let html = "";
          contactos.slice(0, 5).forEach((c) => {
            const star = c.is_favorite
              ? '<span class="text-brand-lime text-[10px] ml-1">★</span>'
              : "";

            // New Dropdown Logic (Floating)
            html += `
                    <div class="group/item relative">
                        <button 
                            class="w-full flex items-center p-2 rounded-lg hover:bg-white/5 transition-colors relative cursor-pointer text-left focus:outline-none"
                            onclick="window.toggleSidebarContactMenu(event, '${c.id}')"
                            data-name="${c.nombre}"
                            data-cedula="${c.cedula}"
                            title="${c.nombre}"
                        >
                            <div class="relative shrink-0">
                                <div class="w-9 h-9 rounded-full bg-slate-700 flex items-center justify-center text-xs font-bold text-slate-300 border border-white/5">
                                    ${c.iniciales}
                                </div>
                                <span class="absolute bottom-0 right-0 w-2.5 h-2.5 rounded-full border-2 border-brand-black bg-emerald-500"></span>
                            </div>
                            <!-- Content -->
                            <div class="flex-1 overflow-hidden whitespace-nowrap sidebar-content opacity-0 pointer-events-none max-w-0 ml-0 transition-all duration-500 ease-in-out min-w-0">
                                <div class="flex justify-between items-center w-full">
                                    <div class="overflow-hidden min-w-0">
                                        <p class="text-sm text-slate-200 font-medium truncate flex items-center">
                                            ${c.nombre} ${star}
                                        </p>
                                        <p class="text-xs text-slate-500 truncate capitalize">Amigo</p>
                                    </div>
                                    <div class="text-slate-500 group-hover/item:text-brand-lime transition-colors">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" /></svg>
                                    </div>
                                </div>
                            </div>
                        </button>
                    </div>`;
          });
          listEl.innerHTML = html + addBtnHtml;

          // RE-CHECK COLLAPSE STATE to show/hide content
          if (!isCollapsed) {
            document
              .querySelectorAll("#sidebar-contacts-list .sidebar-content")
              .forEach((el) => {
                el.classList.remove(
                  "opacity-0",
                  "pointer-events-none",
                  "max-w-0",
                  "ml-0",
                );
                el.classList.add("max-w-xs", "ml-3");
              });
          }
        }
      } catch (e) {
        console.error("Sidebar error:", e);
      }
    }
  }

  initSidebar();

  const sidebar = document.getElementById("sidebar");
  const toggleBtn = document.getElementById("sidebarToggle");
  const toggleIcon = document.getElementById("toggleIcon");

  const photo = document.querySelector(".sidebar-photo");
  const profileSection = photo?.parentElement;

  // Header Elements
  // const headerSection = document.getElementById("headerSection"); // unused

  // Logout Logic
  const logoutBtn = document.getElementById("desktop-logout-btn");
  if (logoutBtn) {
    logoutBtn.addEventListener("click", (e) => {
      e.preventDefault();
      // Usar función global para mostrar el modal de confirmación
      if (window.showLogoutModal) {
        window.showLogoutModal();
      } else {
        authService.logout();
      }
    });
  }

  // --- NOTIFICATION LOGIC ---
  const notifBadge = document.getElementById("notif-badge");

  let showedNotifIds = new Set(); // To avoid toasting same notif twice per session

  // 1. Polling System
  async function checkNotifications() {
    const user = authService.getCurrentUser();
    const userId = user?.id || user?.usuarioId || user?._id;
    if (!userId) return;

    try {
      const { notifications } =
        await notificationService.getNotifications(userId);

      if (notifications && notifications.length > 0) {
        const unreadCount = notifications.filter((n) => !n.is_read).length;

        // Handle Badge
        if (unreadCount > 0) {
          if (notifBadge) {
            notifBadge.classList.remove("hidden");
          }
        } else {
          if (notifBadge) notifBadge.classList.add("hidden");
        }

        // Handle Toasts (New Unread Notifications)
        notifications.forEach((n) => {
          if (!n.is_read && !showedNotifIds.has(n.id)) {
            // Show Toast
            if (n.type === "payment_received") {
              window.showToast(n.message, "success", "Pago Recibido");
            } else {
              window.showToast(n.message, "info", "Nueva Notificación");
            }
            showedNotifIds.add(n.id);
          }
          if (n.is_read) showedNotifIds.add(n.id);
        });
      }
    } catch (e) {
      console.error("Polling error", e);
    }
  }

  // Poll every 10 seconds
  setInterval(checkNotifications, 10000);
  // Initial check
  setTimeout(checkNotifications, 2000);

  const toggleContainer = document.getElementById("toggleContainer");

  // Default to true (Collapsed)
  let isCollapsed = true;
  let toggleTimeout; // Type 'any' for timeout handle

  toggleBtn?.addEventListener("click", () => {
    isCollapsed = !isCollapsed;
    if (toggleTimeout) clearTimeout(toggleTimeout);

    // RE-SELECT CONTENTS dynamically
    const currentContents = document.querySelectorAll(".sidebar-content");
    const profileContent = document.querySelector(".profile-content"); // Select the wrapper
    const searchInput = document.getElementById("sidebar-search-input");

    if (isCollapsed) {
      // Collapse Actions
      sidebar?.classList.remove("w-72");
      sidebar?.classList.add("w-20");

      toggleContainer?.classList.remove("justify-end", "px-4");
      toggleContainer?.classList.add("justify-center", "px-0");

      photo?.classList.remove("lg:w-20", "lg:h-20");
      photo?.classList.add("w-10", "h-10");
      profileSection?.classList.remove("p-6");
      profileSection?.classList.add("p-2", "py-6");

      // Collapsing Profile Info (Immediate sync with sidebar)
      profileContent?.classList.remove("max-h-40", "opacity-100");
      profileContent?.classList.add("max-h-0", "opacity-0");

      // Collapse Search Input
      searchInput?.classList.remove(
        "w-full",
        "pl-9",
        "pr-3",
        "py-2",
        "border",
        "opacity-100",
      );
      searchInput?.classList.add(
        "w-0",
        "p-0",
        "border-0",
        "opacity-0",
        "pointer-events-none",
      );

      currentContents.forEach((el) => {
        el.classList.add("opacity-0", "pointer-events-none", "max-w-0", "ml-0");
        el.classList.remove("max-w-xs", "ml-3");
      });

      const searchIcon = document.querySelector(".sidebar-search-icon");
      searchIcon?.classList.remove(
        "absolute",
        "left-0",
        "top-0",
        "h-full",
        "w-9",
        "pointer-events-none",
      );
      searchIcon?.classList.add(
        "w-full",
        "h-10",
        "relative",
        "mx-auto",
        "cursor-pointer",
        "bg-slate-800/50",
        "rounded-lg",
        "hover:bg-white/5",
        "transition-colors",
      );

      toggleIcon?.classList.add("rotate-180");
    } else {
      // Expand Actions
      sidebar?.classList.remove("w-20");
      sidebar?.classList.add("w-72");

      const searchIcon = document.querySelector(".sidebar-search-icon");
      searchIcon?.classList.add(
        "absolute",
        "left-0",
        "top-0",
        "h-full",
        "w-9",
        "pointer-events-none",
      );
      searchIcon?.classList.remove(
        "w-full",
        "h-10",
        "relative",
        "mx-auto",
        "cursor-pointer",
        "bg-slate-800/50",
        "rounded-lg",
        "hover:bg-white/5",
        "transition-colors",
      );

      toggleContainer?.classList.add("justify-end", "px-4");
      toggleContainer?.classList.remove("justify-center", "px-0");

      photo?.classList.add("lg:w-20", "lg:h-20");
      photo?.classList.remove("w-10", "h-10");
      profileSection?.classList.add("p-6");
      profileSection?.classList.remove("p-2", "py-6");

      // Expand Profile Info (Sync with sidebar width animation)
      // No delay or small delay, but concurrent with width
      profileContent?.classList.remove("max-h-0", "opacity-0");
      profileContent?.classList.add("max-h-40", "opacity-100");

      // Expand Search Input
      searchInput?.classList.add(
        "w-full",
        "pl-9",
        "pr-3",
        "py-2",
        "border",
        "opacity-100",
      );
      searchInput?.classList.remove(
        "w-0",
        "p-0",
        "border-0",
        "opacity-0",
        "pointer-events-none",
      );

      // Delay only for text labels in list
      currentContents.forEach((el) => {
        el.classList.remove(
          "opacity-0",
          "pointer-events-none",
          "max-w-0",
          "ml-0",
        );
        el.classList.add("max-w-xs", "ml-3");
      });

      toggleIcon?.classList.remove("rotate-180");
    }
  });
</script>
