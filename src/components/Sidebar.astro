<aside
  id="sidebar"
  class="group flex flex-col h-screen sticky top-0 z-50 transition-all duration-300 w-20 bg-[#0a0a0a] border-r border-white/10 shrink-0"
>
  <!-- Header: Logo, Collapse -->
  <div
    class="flex flex-col shrink-0 border-b border-white/5 transition-all duration-300 pb-2"
    id="headerSection"
  >
    <!-- Logo & Name -->
    <div
      class="h-16 flex items-center px-6 transition-all duration-300 w-full overflow-hidden whitespace-nowrap"
    >
      <div class="flex items-center transition-all duration-300">
        <div
          class="w-8 h-8 bg-brand-lime rounded-lg flex items-center justify-center text-black font-bold shadow-[0_0_15px_rgba(215,253,73,0.3)] shrink-0"
        >
          C
        </div>
        <span
          class="text-xl font-bold text-white sidebar-content opacity-0 pointer-events-none max-w-0 overflow-hidden ml-0 transition-all duration-500 ease-in-out"
        >
          CapyPay
        </span>
      </div>
    </div>

    <!-- Toggle Buttons -->
    <div
      class="w-full flex justify-center px-0 transition-all duration-300"
      id="toggleContainer"
    >
      <!-- Collapse Button -->
      <button
        id="sidebarToggle"
        class="text-slate-400 hover:text-white hover:bg-white/5 rounded-lg transition-all p-1"
        aria-label="Toggle Sidebar"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 transition-transform duration-300 rotate-180"
          id="toggleIcon"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path>
          ></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Contenedor scrollable del contenido -->
  <div class="flex-1 overflow-y-auto overflow-x-hidden custom-scrollbar scrollable-container">
    <!-- User Profile Section -->
  <div
    class="flex flex-col items-center p-2 py-4 border-b border-white/5 overflow-hidden whitespace-nowrap transition-all duration-300 origin-top"
  >
    <!-- Profile Photo (Clickable) -->
    <a
      href="/profile"
      id="sidebar-profile-photo"
      class="w-9 h-9 rounded-full p-1 bg-transparent mb-2 transition-all duration-300 sidebar-photo border-2 hover:scale-105"
      title="Ver mi perfil"
    >
      <img
        src="https://api.dicebear.com/9.x/lorelei/svg?seed=Aneka"
        alt="User Profile"
        class="w-full h-full rounded-full bg-black object-cover"
      />
    </a>

    <!-- Profile Info Wrapper (Name & Level) -->
    <div
      class="w-full flex flex-col items-center overflow-hidden transition-all duration-300 profile-content max-h-0 opacity-0"
    >
      <!-- Name -->
      <h3 id="sidebar-username" class="text-white font-semibold text-base lg:text-lg mb-1">
        Cargando...
      </h3>

      <!-- Level Info -->
      <div class="w-full mt-2">
        <div class="flex justify-between items-center text-xs text-slate-400 mb-1">
          <span id="sidebar-level-text" class="text-brand-lime font-bold">Nivel -</span>
        </div>
        <div class="flex justify-between items-center text-[10px] text-slate-500 mb-1">
          <span id="sidebar-level-xp">0 XP</span>
          <span id="sidebar-level-max">0 XP</span>
        </div>
        <div class="w-full bg-slate-800 rounded-full h-1.5 overflow-hidden">
          <div
            id="sidebar-level-bar"
            class="bg-brand-lime h-full rounded-full w-[0%] shadow-[0_0_10px_rgba(215,253,72,0.5)]"
          >
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- MAIN NAVIGATION -->
  <div class="flex flex-col gap-1 px-3 mt-4 pb-4">
    <!-- Dashboard Link -->
    <a
      href="/dashboard"
      class="group/nav flex items-center p-2 rounded-lg hover:bg-white/5 transition-colors relative w-full text-left"
      title="Ir al Dashboard"
    >
      <div class="relative shrink-0">
        <div
          class="w-9 h-9 rounded-full bg-slate-800 flex items-center justify-center text-slate-400 group-hover/nav:text-brand-lime transition-colors"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
            ></path>
          </svg>
        </div>
      </div>
      <div
