  </div>

  <!-- Footer: Settings -->
  <div
    class="p-4 border-t border-white/5 mt-auto bg-black/50 flex flex-col gap-1 shrink-0"
  >
    <!-- Share Button -->
    <button
      class="flex items-center text-slate-400 hover:text-white hover:bg-white/5 p-2 rounded-lg transition-all group/share w-full text-left"
