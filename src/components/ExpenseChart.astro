<div
  class="bg-white/5 rounded-3xl p-6 border border-white/10 shadow-lg w-full h-full flex flex-col isolate"
>
  <div class="flex justify-between items-end mb-4 shrink-0">
    <h3 class="text-white text-lg font-semibold">Resumen Semanal</h3>
    <span class="text-green-400 text-sm font-medium"
      >+2.5% vs semana anterior</span
    >
  </div>

  <div class="flex items-end justify-between gap-2 mt-4 flex-1">
    {
      [
        { day: "L", height: "h-16", val: "40%" },
        { day: "M", height: "h-20", val: "60%" },
        { day: "X", height: "h-12", val: "30%" },
        { day: "J", height: "h-24", val: "75%" },
        { day: "V", height: "h-28", val: "85%" },
        { day: "S", height: "h-32", val: "100%", active: true },
        { day: "D", height: "h-14", val: "35%" },
      ].map((item) => (
        <div class="flex flex-col items-center gap-2 flex-1 group">
          <div class="w-full relative flex items-end justify-center h-full">
            <div
              class={`w-full ${item.height} ${item.active ? "bg-linear-to-t from-violet-600 to-fuchsia-500 shadow-[0_0_15px_rgba(139,92,246,0.5)]" : "bg-white/10 group-hover:bg-white/20"} rounded-t-lg transition-all duration-300 relative`}
            >
              <div class="opacity-0 group-hover:opacity-100 absolute -top-8 left-1/2 -translate-x-1/2 bg-gray-800 text-white text-xs py-1 px-2 rounded pointer-events-none transition-opacity z-50">
                {item.val}
              </div>
            </div>
          </div>
          <span
            class={`text-xs ${item.active ? "text-white font-bold" : "text-gray-400 group-hover:text-gray-200"}`}
          >
            {item.day}
          </span>
        </div>
      ))
    }
  </div>
</div>
