---
const currentDate = new Date();
const dateString = currentDate.toLocaleDateString("es-VE", {
  weekday: "short",
  day: "numeric",
  month: "short",
});
const timeString = currentDate.toLocaleTimeString("es-VE", {
  hour: "2-digit",
  minute: "2-digit",
});
---

<div
  class="bg-brand-black rounded-3xl p-4 border border-white/10 shadow-none flex flex-col justify-between h-full relative overflow-hidden isolate"
>
  <!-- Background Decoration -->
  <div
    class="absolute -right-6 -bottom-6 w-24 h-24 bg-brand-lime/5 rounded-full blur-2xl pointer-events-none"
  >
  </div>

  <!-- Header -->
  <div class="flex justify-between items-center">
    <h3 class="text-slate-400 text-xs sm:text-sm font-semibold uppercase tracking-wider">
      Tasa del Día
    </h3>
    <span class="flex h-2 w-2 relative">
      <span
        class="animate-ping absolute inline-flex h-full w-full rounded-full bg-brand-lime/50 opacity-75"
      ></span>
      <span class="relative inline-flex rounded-full h-2 w-2 bg-brand-lime"
      ></span>
    </span>
  </div>

  <!-- Rate Display -->
  <div class="flex items-center justify-between relative z-10 py-1 flex-1">
    <!-- CapyCash Side -->
    <div class="flex flex-col">
      <span
        class="text-xl font-bold bg-clip-text text-transparent bg-linear-to-r from-brand-lime to-emerald-400"
        >1 Capy</span
      >
      <span class="text-[10px] text-slate-400 font-medium">Moneda Base</span>
    </div>

    <!-- Divider Icon -->
    <div class="text-slate-600">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
      </svg>
    </div>

    <!-- Bs Side -->
    <div class="flex flex-col items-end">
      <span id="widget-rate-display" class="text-xl font-bold text-brand-lime"
        >--.--</span
      >
      <span class="text-[10px] text-slate-400 font-medium">Bolívares</span>
    </div>
  </div>

  <!-- Date & Time Footer -->
  <div
    class="flex justify-between items-center border-t border-white/5 pt-2 mt-auto"
  >
    <div class="flex items-center gap-1.5">
      <div class="p-1 rounded bg-brand-lime/10 text-brand-lime">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-3 w-3"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
          ></path>
        </svg>
      </div>
      <p class="text-[10px] text-slate-300 capitalize">{dateString}</p>
    </div>
    <p
      class="text-[10px] text-slate-500 font-mono bg-black/20 px-1.5 py-0.5 rounded"
    >
      {timeString}
    </p>
  </div>
</div>

<script>
  // @ts-nocheck
  import { transactionService } from "../services/api.js";

  const rateDisplay = document.getElementById("widget-rate-display");

  (async () => {
    try {
      const data = await transactionService.getRate();
      if (data && data.tasa && rateDisplay) {
        rateDisplay.innerText = data.tasa.toFixed(2);
      }
    } catch (e) {
      console.error("Widget: Error obteniendo tasa", e);
      if (rateDisplay) rateDisplay.innerText = "Error";
    }
  })();
</script>
