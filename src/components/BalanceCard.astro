---
const { amount, xp } = Astro.props;
---

<div id="balance-card-container" class="relative overflow-hidden rounded-3xl p-6 text-white transition-all duration-500 isolate z-10 w-full shadow-xl" style="background-color: #5833ef;">
  <!-- Background Decoration -->
  <div
    class="absolute top-0 right-0 -mr-8 -mt-8 w-64 h-64 rounded-full bg-brand-lime opacity-20 blur-3xl pointer-events-none mix-blend-overlay"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 -ml-8 -mb-8 w-40 h-40 rounded-full bg-black opacity-30 blur-2xl pointer-events-none"
  >
  </div>

  <div class="relative z-0 flex flex-col justify-between h-full gap-5">
    <!-- Header: Card Icon & Status -->
    <div class="flex justify-between items-center">
       <!-- Card Info Toggle Button -->
       <button
         id="card-info-toggle"
         class="w-10 h-10 bg-black/20 border border-white/10 rounded-full flex items-center justify-center hover:bg-black/30 transition-all hover:scale-110 active:scale-95"
         title="Ver información de tarjeta"
       >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 text-white"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
          ></path>
        </svg>
      </button>

      <div
        class="flex items-center gap-2 px-3 py-1 bg-black/20 rounded-full border border-white/10 backdrop-blur-sm"
      >
        <span class="w-3 h-3 rounded-full bg-brand-lime animate-pulse shadow-[0_0_8px_rgba(215,253,73,0.6)]"></span>
        <span class="text-sm sm:text-base font-semibold text-white">Active Card</span>
      </div>
    </div>

     <!-- Balance Info (Default View) -->
     <div id="balance-view" class="transition-all duration-500">
      <div class="inline-block px-4 py-1.5 rounded-xl bg-black/20 border border-white/10 mb-2">
        <h2
           class="text-base sm:text-lg tracking-widest uppercase bg-gradient-to-r from-purple-100 via-white to-purple-200 bg-clip-text text-transparent drop-shadow-[0_0_10px_rgba(255,255,255,0.5)]"
        >
          Saldo Total
        </h2>
      </div>
      <p class="text-3xl sm:text-4xl font-bold tracking-tight text-white flex gap-1">
        $<span id="user-balance-display">{amount}</span>
      </p>
    </div>

    <!-- Card Info View (Hidden by default) -->
    <div id="card-info-view" class="hidden transition-all duration-500">
      <h2
        class="text-base sm:text-lg tracking-widest uppercase mb-3 bg-gradient-to-r from-brand-lime/80 to-emerald-400/80 bg-clip-text text-transparent"
      >
        Información de Tarjeta
      </h2>
      <div class="space-y-3">
        <!-- Card Number -->
        <div>
          <p class="text-xs text-purple-200/70 mb-1">Número de Tarjeta</p>
          <p class="text-lg font-bold tracking-widest text-white">**** **** **** 4242</p>
        </div>

        <!-- Card Holder -->
        <div>
          <p class="text-xs text-purple-200/70 mb-1">Titular</p>
          <p class="text-sm font-semibold text-white">Cormex University</p>
        </div>

        <!-- Expiry Date -->
        <div>
          <p class="text-xs text-purple-200/70 mb-1">Fecha de Vencimiento</p>
          <p class="text-sm font-semibold text-white">12/28</p>
        </div>

        <!-- CVV -->
        <div class="flex items-center gap-2">
          <div class="flex-1">
            <p class="text-xs text-purple-200/70 mb-1">CVV</p>
            <p class="text-sm font-semibold text-white">***</p>
          </div>
          <button
            id="close-card-info"
            class="w-8 h-8 rounded-full bg-white/10 hover:bg-white/20 flex items-center justify-center text-white transition-all hover:scale-110"
            title="Cerrar"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"
              ></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Timer Countdown -->
      <div class="mt-3 flex items-center justify-center gap-2">
        <span class="text-xs text-purple-200">Cerrando en</span>
        <span id="card-info-timer" class="text-xs font-bold text-brand-lime bg-brand-lime/10 px-2 py-1 rounded-full">30</span>
        <span class="text-xs text-purple-200">segundos</span>
      </div>
    </div>

    <!-- Actions -->
    <div class="pt-2 flex gap-3">
      <!-- Recargar Button -->
      <a
        href="/recarga"
        class="flex-1 bg-black/20 hover:bg-black/30 text-white border border-white/10 py-2.5 px-4 rounded-xl text-sm font-bold transition-all flex justify-center items-center gap-2 backdrop-blur-md group"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 group-hover:rotate-90 transition-transform duration-300 text-brand-lime"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 6v6m0 0v6m0-6h6m-6 0H6"
          ></path>
        </svg>
        <span>Recargar</span>
      </a>

      <!-- Bloquear Button (Icon Only) -->
      <button
        class="aspect-square h-auto bg-black/20 hover:bg-black/30 text-white rounded-xl transition-all flex justify-center items-center border border-white/10 shrink-0 p-3 backdrop-blur-md"
        title="Bloquear Tarjeta"
        aria-label="Bloquear Tarjeta"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
          ></path>
        </svg>
      </button>
    </div>
  </div>
</div>

<script>
  // @ts-nocheck
  import { pinService } from "../services/api.js";

  // Configuración de colores por nivel (más oscuros para mejor legibilidad)
  const nivelesColores = {
    'novato': { primary: '#6B7280', glow: 'rgba(107, 114, 128, 0.2)', shadow: 'rgba(107, 114, 128, 0.4)' },
    'bachiller': { primary: '#3B82F6', glow: 'rgba(59, 130, 246, 0.2)', shadow: 'rgba(59, 130, 246, 0.4)' },
    'licenciado': { primary: '#7C3AED', glow: 'rgba(124, 58, 237, 0.2)', shadow: 'rgba(124, 58, 237, 0.4)' },
    'master': { primary: '#DB2777', glow: 'rgba(219, 39, 119, 0.2)', shadow: 'rgba(219, 39, 119, 0.4)' },
    'doctorado': { primary: '#A8E638', glow: 'rgba(168, 230, 56, 0.2)', shadow: 'rgba(168, 230, 56, 0.4)' }
  };

  // Función para obtener el nivel según XP
  function obtenerNivel(xp) {
    if (xp >= 10001) return 'doctorado';
    if (xp >= 5001) return 'master';
    if (xp >= 2001) return 'licenciado';
    if (xp >= 501) return 'bachiller';
    return 'novato';
  }

  // Función para obtener el XP del localStorage
  function obtenerXP() {
    // Primero intentar de capypay_user_xp (que se guarda al cambiar nivel)
    let xp = parseInt(localStorage.getItem('capypay_user_xp'));
    
    // Si no existe, intentar del usuario
    if (!xp || isNaN(xp)) {
      try {
        const userStr = localStorage.getItem('capypay_user');
        if (userStr) {
          const user = JSON.parse(userStr);
          xp = user.xp || user.puntos || 1500;
        }
      } catch (e) {
        console.error('Error al obtener XP del usuario:', e);
        xp = 1500; // XP por defecto
      }
    }

    return xp;
  }

  // Función para actualizar el color de la tarjeta según el nivel
  function actualizarTarjetaPorNivel(xp) {
    try {
      // Determinar nivel
      const nivel = obtenerNivel(xp);
      const colorConfig = nivelesColores[nivel];

      // Actualizar tarjeta
      const balanceCardContainer = document.getElementById('balance-card-container');
      if (balanceCardContainer && colorConfig) {
        balanceCardContainer.style.backgroundColor = colorConfig.primary;
        balanceCardContainer.style.boxShadow = `0 0 20px ${colorConfig.shadow}`;
      }

      // Actualizar glow decorativo
      const glowDiv = balanceCardContainer?.querySelector('.absolute.top-0');
      if (glowDiv && colorConfig) {
        glowDiv.style.backgroundColor = colorConfig.glow;
      }
    } catch (e) {
      console.error('Error al actualizar tarjeta por nivel:', e);
    }
  }

  let cardInfoTimer: number | null = null;
  let countdownInterval: number | null = null;

  const cardInfoToggle = document.getElementById('card-info-toggle');
  const balanceView = document.getElementById('balance-view');
  const cardInfoView = document.getElementById('card-info-view');
  const closeCardInfoBtn = document.getElementById('close-card-info');
  const cardInfoTimerEl = document.getElementById('card-info-timer');

  // Función para mostrar la info de la tarjeta
  const showCardInfo = async () => {
    if (!balanceView || !cardInfoView || !cardInfoTimerEl) return;

    // Pedir PIN antes de mostrar la info
    if (window.requestPin) {
      window.requestPin(async (pin) => {
        try {
          // Validar PIN con el backend
          const response = await pinService.verify(pin);

          if (response && (response.valid === true || response.success === true)) {
            // PIN correcto - mostrar info de tarjeta
            showCardInfoInternal();
          } else {
            // PIN incorrecto - mostrar error
            if (window.showToast) {
              window.showToast('PIN incorrecto', 'error', 'Error de seguridad');
            }
            // Vibración si está disponible (móvil)
            if (navigator.vibrate) {
              navigator.vibrate(200);
            }
          }
        } catch (error) {
          console.error('Error validando PIN:', error);
          // En caso de error de red, podríamos mostrar la info o mostrar error
          // Por seguridad, mostramos error
          if (window.showToast) {
            window.showToast('Error al validar PIN. Intenta de nuevo.', 'error');
          }
        }
      });
    } else {
      // Fallback si no existe requestPin (mostrar directamente)
      showCardInfoInternal();
    }
  };

  // Función interna que muestra la info (solo se llama si el PIN es correcto)
  const showCardInfoInternal = () => {
    // Ocultar balance y mostrar info de tarjeta
    balanceView.classList.add('hidden');
    cardInfoView.classList.remove('hidden');

    // Iniciar countdown de 30 segundos
    let secondsLeft = 30;
    cardInfoTimerEl.textContent = secondsLeft.toString();

    countdownInterval = setInterval(() => {
      secondsLeft--;
      cardInfoTimerEl.textContent = secondsLeft.toString();

      if (secondsLeft <= 0) {
        hideCardInfo();
      }
    }, 1000) as unknown as number;

    // Guardar timer para poder limpiarlo si se cierra manualmente
    cardInfoTimer = setTimeout(hideCardInfo, 30000) as unknown as number;
  };

  // Función para ocultar la info de la tarjeta
  const hideCardInfo = () => {
    if (!balanceView || !cardInfoView) return;

    // Limpiar timers
    if (cardInfoTimer) {
      clearTimeout(cardInfoTimer);
      cardInfoTimer = null;
    }
    if (countdownInterval) {
      clearInterval(countdownInterval);
      countdownInterval = null;
    }

    // Mostrar balance y ocultar info de tarjeta
    cardInfoView.classList.add('hidden');
    balanceView.classList.remove('hidden');
  };

  // Event listeners
  if (cardInfoToggle) {
    cardInfoToggle.addEventListener('click', (e) => {
      e.preventDefault();
      // Si ya está mostrando la info, la ocultamos (sin pedir PIN)
      if (cardInfoView && !cardInfoView.classList.contains('hidden')) {
        hideCardInfo();
      } else {
        // Pedir PIN y luego mostrar info
        showCardInfo();
      }
    });
  }

  if (closeCardInfoBtn) {
    closeCardInfoBtn.addEventListener('click', (e) => {
      e.preventDefault();
      hideCardInfo();
    });
  }

  // Cleanup on unmount (si el componente se remueve)
  window.addEventListener('beforeunload', () => {
    hideCardInfo();
  });

  // Actualizar color de tarjeta según nivel al cargar
  // Primero intentar de capypay_user_xp (que se guarda al cambiar nivel)
  let xpLocalStorage = parseInt(localStorage.getItem('capypay_user_xp'));
  actualizarTarjetaPorNivel(xpLocalStorage);

  // Escuchar cambios en localStorage
  window.addEventListener('storage', (e) => {
    if (e.key === 'capypay_user_xp' && e.newValue) {
      actualizarTarjetaPorNivel(parseInt(e.newValue));
    }
  });
</script>
